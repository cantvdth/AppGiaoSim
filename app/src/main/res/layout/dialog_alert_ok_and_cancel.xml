<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alert_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_bg"
    android:orientation="vertical">

    <vn.simthanglong.appgiaosim.view.TextViewCustom
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="40dp"
        android:text="@string/app_name"
        android:textColor="@color/color_edt_create_task_lable"
        android:textSize="17sp"
        android:textStyle="bold" />

    <vn.simthanglong.appgiaosim.view.TextViewCustom
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_edt_create_task_lable"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/border_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <vn.simthanglong.appgiaosim.view.TextViewCustom
            android:id="@+id/tv_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/line"
            android:layout_toRightOf="@+id/line"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/color_edt_create_task_lable"
            android:textStyle="bold" />

        <View
            android:id="@+id/line"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/border_gray" />
        <vn.simthanglong.appgiaosim.view.TextViewCustom
            android:id="@+id/tv_yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/line"
            android:layout_toStartOf="@+id/line"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>